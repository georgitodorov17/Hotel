@model HotelReservations.Models.LoginModel

@{
    ViewData["Title"] = "Login Page";
}
<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-sm-4 my-4">
            <form method="post" asp-action="Login" class="rounded bg-dark p-5">
                <h3 class="text-light text-center mb-4">SunriseHotel.com</h3>
                <h6 class="text-light text-center">Sign in</h6>
                <p class="text-light">
                    <span asp-validation-for="Message"></span>
                </p>

                <div class="form-group mb-3">
                    <p class="text-light">
                        <span asp-validation-for="Username"></span>
                    </p>

                    <label asp-for="Username"
                           class="text-light">
                    </label>

                    <input type="text"
                           asp-for="Username"
                           id="email"
                           class="form-control"/>
                </div>

                <div class="form-group mb-2">
                    <p class="text-light">
                        <span asp-validation-for="Password"></span>
                    </p>

                    <label
                        asp-for="Password"
                        class="text-light">
                    </label>

                    <input id="password" type="password" asp-for="Password" class="form-control"/>
                </div>

                <div class="form-group mb-2">
                    <p class="text-light">
                        <span asp-validation-for="RememberMe"></span>
                    </p>

                    <label
                        asp-for="RememberMe"
                        class="text-light">
                    </label>

                    <input id="rememberMe" type="checkbox" asp-for="RememberMe"/>
                </div>

                <div class="mb-3">
                    <a href="#" class="hover">Forgot password?</a>
                </div>
                <div class="mb-3">
                    <span class="text-light">New to SunriseHotel.com?</span>
                    <a asp-controller="Authentication" asp-action="Register" class="link-dark text-primary">Sign up here</a>
                </div>
                <div>
                    <input type="submit" class="btn btn-primary" value="Log In"/>
                </div>
            </form>
        </div>
    </div>
</div>