    <link href="/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <!-- Template Main CSS File -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="~/HotelReservations.styles.css" rel="stylesheet"/>


</head>
<body>
<header id="header" class="fixed-top d-flex align-items-center" style="position: static;">
    <div class="container d-flex align-items-center">
        <h1 class="logo me-auto">
            <a href="/">Sunrise<span>.</span></a>
        </h1>
        <!-- Uncomment below if you prefer to use an image logo -->
        <!-- <a href="index.html" class="logo me-auto"><img src="assets/img/logo.png" alt=""></a>-->

        <nav id="navbar" class="navbar order-last order-lg-0">
            <ul>
                <li>
                    <a class="nav-link scrollto active" href="/">Home</a>
                </li>
                <li>
                    <a class="nav-link scrollto" href="/home/aboutus">Contact Us</a>
                </li>
            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav><!-- .navbar -->

        @if (!Context.User.Identity!.IsAuthenticated)
        {
            <a asp-controller="Authentication" asp-action="Login" class="get-started-btn scrollto">Login</a>
            <a asp-controller="Authentication" asp-action="Register" class="get-started-btn scrollto">Register</a>
        }
        else
        {
            if (Context.User.IsInRole("Admin"))
            {
                <a asp-controller="Admin" asp-action="Panel" class="get-started-btn scrollto">Admin</a>
            }

            if (Context.User.IsInRole("Manager") || Context.User.IsInRole("Admin"))
            {
                <a asp-controller="Manager" asp-action="CreateHotel" class="get-started-btn scrollto">Create Hotel</a>
                <a asp-controller="Manager" asp-action="CreateRoom" class="get-started-btn scrollto">Create Room</a>
            }
            
            <form method="post" asp-controller="Authentication" asp-action="Logout">
                <button type="submit" class="get-started-btn scrollto">Logout</button>
            </form>
        }
    </div>
</header><!-- End Header -->

<main id="main">
    @RenderBody()
</main>

<footer id="footer">

    <div class="footer-top">
        <div class="container">
            <div class="row">

                <div class="col-lg-3 col-md-6 footer-contact">
                    <h3>Sunrise<span>.</span></h3>
                    <p>

                        бул. Никола Вапцаров 38Б <br/>
                        гр. Пловдив<br/>
                        4003<br/>
                        България <br/><br/>
                        <strong>Phone Number:</strong> +359 916 827 364<br/>
                        <strong>Facebook:</strong> Sunrise Hotel<br/>
                    </p>
                </div>

                <div class="col-lg-2 col-md-6 footer-links">
                    <h4>Useful Links</h4>
                    <ul>
                        <li>
                            <i class="bx bx-chevron-right"></i> <a href="/">Home</a>
                        </li>
                        <li>
                            <i class="bx bx-chevron-right"></i> <a href="/home/aboutus">About us</a>
                        </li>
                        <li>
                            <i class="bx bx-chevron-right"></i> <a href="/home/termsofservice">Terms of service</a>
                        </li>
                        <li>
